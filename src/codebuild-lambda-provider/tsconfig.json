{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./",
    "rootDir": "./"
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "*.test.ts"
  ]
}
